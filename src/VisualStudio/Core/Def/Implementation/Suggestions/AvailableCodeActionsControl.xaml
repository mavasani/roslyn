<UserControl x:Class="Microsoft.VisualStudio.LanguageServices.Implementation.Suggestions.AvailableCodeActionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:ClassModifier="internal"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="RefreshActions" Content="Recompute for Active document" HorizontalAlignment="Left" Margin="42,11,0,0" VerticalAlignment="Top" Width="252" Click="RefreshActions_Click" Height="31" FontSize="14" />
        <Label x:Name="TitleLabel" VerticalAlignment="Top" Margin="10,51,10,0" FontSize="14"/>
        <TreeView x:Name="AvailableActionsTreeView" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Cursor="Hand" BorderBrush="{x:Null}" FontSize="16" Width="750" />
    </Grid>
</UserControl>
